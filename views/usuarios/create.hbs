<!-- views/idiomas/create.hbs -->
<h1 class="mb-4">Nuevo Idioma</h1>
<form action="/idiomas" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="nombreIdioma">Nombre del Idioma</label>
    <input type="text" class="form-control" id="nombreIdioma" name="nombreIdioma" required>
  </div>
  <div class="form-group">
    <label for="banderaIdioma">Bandera (PNG)</label>
    <input type="file" class="form-control-file" id="banderaIdioma" name="banderaIdioma" accept="image/png" required>
  </div>
  <button type="submit" class="btn btn-primary">Guardar</button>
  <a href="/idiomas/" class="btn btn-secondary">Volver</a>
</form>
