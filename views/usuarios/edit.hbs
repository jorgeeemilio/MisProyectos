<!-- views/idiomas/edit.hbs -->
<h1 class="mb-4">Editar Idioma</h1>
<form action="/idiomas/edit/}}" method="POST">
  <div class="form-group">
    <label for="nombreIdioma">Nombre del Idioma</label>
    <input type="text" class="form-control" id="nombreIdioma" name="nombreIdioma" value="{{idioma.nombreIdioma}}" required>
  </div>
  <div class="form-group">
    <label for="banderaIdioma">Bandera (PNG)</label>
    <input type="file" class="form-control-file" id="banderaIdioma" name="banderaIdioma" accept="image/png">
    <input type="hidden" name="banderaIdioma" value="{{idioma.banderaIdioma}}">
    <img src="/images/{{idioma.banderaIdioma}}" alt="{{idioma.nombreIdioma}}" class="img-thumbnail mt-2" style="width: 50px;">
  </div>
  <button type="submit" class="btn btn-primary">Actualizar</button>
  <a href="/idiomas/" class="btn btn-secondary">Volver</a>
</form>
