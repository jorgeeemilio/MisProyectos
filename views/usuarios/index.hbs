<!-- views/usuarios/index.hbs -->
<h1 class="mb-4">Lista de Idiomas</h1>
<a href="/idiomas/create" class="btn btn-primary mb-3">Nuevo Idioma</a>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Bandera</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each idiomas}}
    <tr>
      <td>{{idIdioma}}</td>
      <td><a href="/palabras/{{idIdioma}}/{{nombreIdioma}}">{{nombreIdioma}}</a></td>
      <td><a href="/palabras/{{idIdioma}}/{{nombreIdioma}}"><img src="/images/{{banderaIdioma}}" alt="{{nombreIdioma}}" class="img-thumbnail" style="width: 50px;"></a></td>
      <td>
        <a href="/idiomas/edit/{{idIdioma}}" class="btn btn-warning btn-sm">
          <i class="fas fa-edit"></i> Editar
        </a>
        <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete({{idIdioma}})">
          <i class="fas fa-trash"></i> Borrar
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<!-- Script para confirmar la eliminación -->
<script>
  function confirmDelete(id) {
    if (confirm('¿Estás seguro de que deseas borrar este idioma?')) {
      window.location.href = `/idiomas/delete/${id}`;
    }
  }
</script>

<!-- Font Awesome para los iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
